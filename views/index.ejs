<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Express</title>
    <!-- Tailwind css -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900 text-white">
      <h1 class="px-10 pt-5 text-4xl">Fill the form:</h1>
      <div class="form p-10">
        <form action="/create" method="post">
          <input
            class="block px-5 py-2 w-full bg-zinc-800 rounded-md outline-none"
            type="text"
            placeholder="Title"
            name="title"
          />
          <textarea
            class="block px-5 py-2 mt-2 w-full resize-none bg-zinc-800 rounded-md outline-none"
            placeholder="write your task details"
            name="details"
          ></textarea>
          <input
            class="mt-4 bg-blue-600 px-5 py-2 rounded-lg cursor-pointer"
            type="submit"
            value="Create Task"
          />
        </form>
      </div>
      <!-- Task show there -->
      <div class="task p-10 flex flex-wrap gap-4">
        <% if(files.length > 0){%> <% files.forEach(function(val){%>
        <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
          <h1 class="text-white text-2xl pb-2"><%= val %></h1>
          <a class="text-blue-500" href="">Read More</a>
        </div>
        <%}) %> <% } else{%>
        <h3 class="text-zinc-300">No tasks Yet</h3>
        <% } %>
      </div>
      <!-- End  -->
    </div>
  </body>
</html>
